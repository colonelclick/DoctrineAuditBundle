{% extends "@DHDoctrineAudit/layout.html.twig" %}

{% import '@DHDoctrineAudit/Audit/helpers/bootstrap.html.twig' as bootstrap %}
{% import '@DHDoctrineAudit/Audit/helpers/helper.html.twig' as helper %}

{% block dh_doctrine_audit_content %}
<div class="card border-0">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">
                    <a href="{{ path('dh_doctrine_audit_list_audits', {'blame': app.request.query.get('blame')}) }}">{% trans %}audit.header.home{% endtrans %}</a>
                </li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-sm-12 col-md">
                <h4 class="card-title">{{ audited|length }} {% trans %}audit.header.audited_entities{% endtrans %}</h4>
            </div>
            <div class="col-sm-12 col-md">
                <div class="row">
                    <div class="col">
                        <h4 class="card-title">{{ blamed|length }} {% trans %}audit.header.blamed_users{% endtrans %}</h4>
                    </div>
                    <div class="col">
                        <select class="form-control" id="blame" style="margin-top: -.3rem" data-url="{{ path('dh_doctrine_audit_list_audits') }}">
                            <option></option>
                            {% for blame_id, blame_user in blamed %}
                                <option value="{{ blame_id }}" {{ app.request.query.get('blame') == blame_id ? 'selected' }}>{{ blame_user }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <table class="table table-hover">
            <thead class="thead-dark">
            <th>{% trans %}audit.table_headers.entity{% endtrans %}</th>
            <th>{% trans %}audit.table_headers.table{% endtrans %}</th>
            <th>{% trans %}audit.table_headers.activity{% endtrans %}</th>
            <th width="10%"></th>
            </thead>
            <tbody>
            {% for entity, table in audited %}
                <tr>
                    <td><code>{{ entity|escape }}</code></td>
                    <td>{{ table|escape }}</td>
                    <td>{{ bootstrap.badge(reader.getAuditsCount(entity, null, app.request.query.get('blame')) ~ ' operations') }}</td>
                    <td>
                        <a href="{{ path('dh_doctrine_audit_show_entity_history', {'entity': helper.namespaceToParam(entity), 'blame': app.request.query.get('blame')}) }}">{% trans %}audit.audit_details.view_audit{% endtrans %}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock dh_doctrine_audit_content %}

{% block javascripts %}
{{ parent() }}
<script>
    let select = $('#blame');
    let route = select.data('url');

    select.on('change', (event) => {
        let blame = $(event.currentTarget).val();

        if (blame === '') {
            location.replace(route);
        } else {
            location.replace(route + '?blame=' + $(event.currentTarget).val());
        }
    });
</script>
{% endblock %}
